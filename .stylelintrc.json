{
	"stylelint.enable": true,
	"extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
	"ignoreFiles": [
		".nuxt/**/*",
		".output/**/*",
		"dist/**/*",
		".vite/**/*",
		"**/node_modules/**/*",
		"**/*_normalize.scss",
		"**pages/**",
		"**ui/**",
		"**utils/**"
	],

	"processors": [
		[
			"@mapbox/stylelint-processor-arbitrary-tags",
			{
				"fileFilterRegex": ["\\.vue$"]
			}
		]
	],
	"rules": {
		"no-empty-first-line": null,
		"no-empty-source": null
	},
	"plugins": ["stylelint-scss", "stylelint-order"],
	"order/properties-order": [
		"display",
		"position",
		"top",
		"right",
		"bottom",
		"left",
		"z-index",
		"float",
		"clear",
		"flex",
		"flex-grow",
		"flex-shrink",
		"flex-basis",
		"align-self",
		"order",
		"grid",
		"grid-area",
		"grid-template",
		"grid-template-rows",
		"grid-template-columns",
		"grid-template-areas",
		"grid-auto-rows",
		"grid-auto-columns",
		"grid-auto-flow",
		"grid-gap",
		"grid-row-gap",
		"grid-column-gap",
		"justify-content",
		"align-content",
		"justify-items",
		"align-items",
		"width",
		"min-width",
		"max-width",
		"height",
		"min-height",
		"max-height",
		"padding",
		"padding-top",
		"padding-right",
		"padding-bottom",
		"padding-left",
		"margin",
		"margin-top",
		"margin-right",
		"margin-bottom",
		"margin-left",
		"box-sizing",
		"overflow",
		"overflow-x",
		"overflow-y",
		"border",
		"border-width",
		"border-style",
		"border-color",
		"border-top",
		"border-top-width",
		"border-top-style",
		"border-top-color",
		"border-right",
		"border-right-width",
		"border-right-style",
		"border-right-color",
		"border-bottom",
		"border-bottom-width",
		"border-bottom-style",
		"border-bottom-color",
		"border-left",
		"border-left-width",
		"border-left-style",
		"border-left-color",
		"border-radius",
		"border-top-left-radius",
		"border-top-right-radius",
		"border-bottom-right-radius",
		"border-bottom-left-radius",
		"background",
		"background-color",
		"background-image",
		"background-repeat",
		"background-position",
		"background-size",
		"box-shadow",
		"opacity",
		"transition",
		"transform",
		"transform-origin",
		"animation",
		"color",
		"font",
		"font-family",
		"font-size",
		"font-weight",
		"font-style",
		"line-height",
		"text-align",
		"text-transform",
		"text-decoration",
		"text-shadow",
		"white-space",
		"vertical-align",
		"list-style",
		"outline",
		"outline-width",
		"outline-style",
		"outline-color",
		"outline-offset",
		"cursor",
		"user-select"
	]
}
