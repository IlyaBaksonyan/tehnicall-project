{
	"extends": "@vue/tsconfig/tsconfig.node.json",
	"include": [
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"playwright.config.*"
	],
	"compilerOptions": {
		"composite": true,
		"noImplicitThis": true,
		"noUncheckedIndexedAccess": true,
		"types": ["node"]
	},
	"strict": true,
	"moduleResolution": "NodeNext",
	"noImplicitAny": true,
	"isolatedModules": true,
	"noUncheckedIndexedAccess": true
}
